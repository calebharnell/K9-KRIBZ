<div class="container">

  <h1>User List</h1>

  <table class="table table-striped table-hover ">

    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %> <%= user.last_name %></td>
        <% if user_signed_in? %>
          <td><%= user.email %></td>
        <% else %>

        <td>
          Sign in to see email
        </td>

        <% end %>
        <td><%= user.suburb %>,
          <%= user.state %></td>
        <td><%= link_to 'Show Profile', user, class: "btn btn-primary btn-sm" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
