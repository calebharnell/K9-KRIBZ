<div class="container">
  <% unless user_signed_in? %>
    <div class="alert alert-dismissible alert-warning">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <p><strong>To view listings, please create an account or log in</strong></p>
    </div>
  <% end %>

  <div class="jumbotron home-jumbotron">
    <div class="opacity-layer">
      <%= image_tag 'dog-logo.png' %>
      <h1>Welcome to K9 KRIBZ</h1>
      <p>Connecting dog owners and dog sitters</p>
      <% if user_signed_in? %>
        <p><%= link_to 'Continue to Listings', listings_path, class: "btn btn-primary btn-lg" %></p>
      <% else %>
        <p><%= link_to 'Create an Account', '/users/sign_up', class: "btn btn-primary btn-lg" %></p>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 col-lg-4">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Intelligent dog agrees - it's the smarter choice</h3>
        </div>
        <div class="panel-body">
          <%= image_tag 'intelligent_dog.png', size: "300x300" %>
        </div>
      </div>
    </div>
    <div class="col-sm-6 col-lg-4">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Browse listings for free, upgrade to message other users</h3>
        </div>
        <div class="panel-body">
          <%= image_tag 'bad_pun_dog.png', size: "300x300" %>
        </div>
      </div>
    </div>
    <div class="col-sm-6 col-lg-4">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Upgrade to a premium membership for a one-off fee of only $14.99!</h3>
        </div>
        <div class="panel-body">
          <%= image_tag 'doge.png', size: "300x300" %>
        </div>
      </div>
    </div>
  </div>
</div>
